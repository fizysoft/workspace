[mysqld]
### Compatible fix for Mysql 8
default_authentication_plugin=mysql_native_password

### Allow import big file
max_allowed_packet=1073741824
net_buffer_length=1048576


### CACHES AND LIMITS #
tmp_table_size = 128M
max_heap_table_size = 128M

